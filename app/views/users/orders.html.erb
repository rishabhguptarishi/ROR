<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Your Orders</h1>
<div>
  <% @user.orders.each do |order| %>
    <table>
      <tbody>
        <tr>
          <td><%= order.address %></td>
          <td><%= order.email %></td>
          <td><%= order.pay_type %></td>
          <td><%= order.line_items.to_a.sum{ |item| item.total_price} %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <table>
        <thead>
          <th>Title</th>
          <th>Quantity</th>
          <th>Price</th>
        </thead>
        <tbody>
      <% order.line_items.each do |line_item| %>

          <tr>
            <td><%= line_item.product.title %></td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.product.price %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
    </div>
  <% end %>
</div>
